<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="agalloS6A.Views.vCrud"
             Title="Estudiantes - CRUD"
             BackgroundColor="#f4f4f4">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label 
            Text="CRUD DE ESTUDIANTES"
            FontSize="24"
            FontAttributes="Bold"
            TextColor="#ffffff"
            BackgroundColor="#3b82f6"
            Padding="10"
            HorizontalTextAlignment="Center"/>

        <Grid ColumnSpacing="10" RowSpacing="5" Padding="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Text="CÃ³digo" FontAttributes="Bold" TextColor="White" BackgroundColor="#1d4ed8" Padding="5" />
            <Label Text="Nombre" FontAttributes="Bold" TextColor="White" BackgroundColor="#1d4ed8" Padding="5" Grid.Column="1" />
            <Label Text="Apellido" FontAttributes="Bold" TextColor="White" BackgroundColor="#1d4ed8" Padding="5" Grid.Column="2" />
            <Label Text="Edad" FontAttributes="Bold" TextColor="White" BackgroundColor="#1d4ed8" Padding="5" Grid.Column="3" />
        </Grid>

        <ListView x:Name="lvEstudiantes"
                  HasUnevenRows="True"
                  SeparatorVisibility="None"
                  BackgroundColor="#e0f2fe">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Codigo}" TextColor="#1e40af" Grid.Column="0"/>
                            <Label Text="{Binding Nombre}" TextColor="#1e40af" Grid.Column="1"/>
                            <Label Text="{Binding Apellido}" TextColor="#1e40af" Grid.Column="2"/>
                            <Label Text="{Binding Edad}" TextColor="#1e40af" Grid.Column="3"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>
